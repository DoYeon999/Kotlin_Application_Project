<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".kdy.FishplaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/fishing_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/white"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/yeongdeok_blueroad"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/fish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/yeongdeok_blueroad"
                android:textSize="13sp"/>

<!--            <TextView-->
<!--                android:id="@+id/tel"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:text=""-->
<!--                android:fontFamily="@font/yeongdeok_blueroad"-->
<!--                android:textSize="11sp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tostar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/emptybook"/>

            <ImageView
                android:id="@+id/unstar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:src="@drawable/fillbook"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>