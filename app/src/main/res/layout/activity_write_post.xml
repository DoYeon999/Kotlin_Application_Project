<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/writetoolbar">
    <include layout="@layout/toolbar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/writetoolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutwrite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_fishspecies_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="어종"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/ed_fishspecies_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_round4_gray300"
                android:hint="어종을 입력해 주세요"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_fishspecies_write" />


            <TextView
                android:id="@+id/tv_content_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="내용"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_fishspecies_write" />

            <EditText
                android:id="@+id/ed_content_write"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_round4_gray300"
                android:gravity="top"
                android:hint="내용을 입력해 주세요"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_content_write" />


            <TextView
                android:id="@+id/tv_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="이미지 첨부"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_content_write" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="최대 5장 첨부 가능"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_image"
                app:layout_constraintStart_toEndOf="@id/tv_add_image"
                app:layout_constraintTop_toTopOf="@id/tv_add_image" />

            <ImageView
                android:id="@+id/im_one_write1"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_round4_gray300"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_image"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/im_one_write2"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_round4_gray300"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="@id/im_one_write1"
                app:layout_constraintStart_toEndOf="@id/im_one_write1" />

            <ImageView
                android:id="@+id/im_one_write3"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_round4_gray300"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="@id/im_one_write1"
                app:layout_constraintStart_toEndOf="@id/im_one_write2" />

            <ImageView
                android:id="@+id/im_one_write4"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_round4_gray300"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im_one_write1" />

            <ImageView
                android:id="@+id/im_one_write5"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_round4_gray300"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintStart_toEndOf="@id/im_one_write4"
                app:layout_constraintTop_toBottomOf="@id/im_one_write2" />

            <ImageView
                android:id="@+id/im_one_cancel_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/image_cancel"
                app:layout_constraintEnd_toEndOf="@id/im_one_write1"
                app:layout_constraintTop_toTopOf="@id/im_one_write1" />


