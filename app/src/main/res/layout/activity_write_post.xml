            <ImageButton
                android:id="@+id/ibt_get_photo_write"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/image_add_photo"
                android:text="사진"
                app:layout_constraintStart_toEndOf="@id/im_one_write5"
                app:layout_constraintTop_toBottomOf="@id/im_one_write3" />

            <Button
                android:id="@+id/bt_create_write"
                android:backgroundTint="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="작성하기"
                app:layout_constraintTop_toBottomOf="@id/im_one_write4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.764"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pr_loading_post"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>





















